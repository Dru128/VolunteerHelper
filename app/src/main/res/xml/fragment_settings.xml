<?xml version="1.0" encoding="utf-8"?>
    <PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:key="main_screen">
        <PreferenceCategory
            app:key="user_category"
            app:title="Личные данные">
            <EditTextPreference
                app:dialogTitle="Ваше имя"
                app:dialogMessage="Введите ваше полное имя"
                app:key="NAME"
                app:title="Имя"
                app:summary="Фамилия Имя">
            </EditTextPreference>
            <EditTextPreference
                app:dialogTitle="Ваш телефон"
                app:dialogMessage="Введите ваш телефон"
                app:key="PHONE"
                app:enabled="false"
                app:title="Телефон"
                app:summary="88005553535">
            </EditTextPreference>
            <Preference
                app:key="LOCATION"
                app:title="Местоположение"
                app:summary="нажмите чтобы изменить">
            </Preference>
            <EditTextPreference
                app:dialogTitle="Дополнительная информация"
                app:key="INF"
                app:title="Дополнительная информация"
                app:summary="Улица Пошкина дом Колотушкина">
            </EditTextPreference>
        </PreferenceCategory>

    <PreferenceCategory
        app:title="Аккаунт">
        <EditTextPreference
            app:enabled="false"
            app:key="CATEGORY"
            app:title="ТИП АККАУНТА">
        </EditTextPreference>
    </PreferenceCategory>

